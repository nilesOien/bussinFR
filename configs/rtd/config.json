#! Config for client information.
#! The '#!' delineates comments, but aside
#! from that, it's JSON.
{
 #! Web services root URL - where the Python is serving from.
 "webservicesURL": "https://bussinfr.net/rtd",
 #! Initial map zoom state.
 "initZoom": 14,
 #! Max map zoom state.
 "maxZoom": 18,
 #! Minimum map zoom state
 "minZoom": 10,
 #! Browser tab title
 "tabTitle": "BussinFR",
 #! Header.
 "header": "<big><B>RTD Busses</b></big><br>This page is in no way affiliated with RTD",
 #! Footer.
 "footer": "In no way is this information guaranteed to be correct",
 #! Map initial center lat
 "mapLat": 40.075077,
 #! Map initial center lon
 "mapLng": -105.207176,
 #! Metric units or not
 "metric": false,
 #! Use device location, heading or not
 "deviceLocation": false,
 #! Update interval, seconds.
 "updateSec": 30,
 #! Minimum map zoom state to show vehicles
 "minZoomForVehicles": 11,
 #! Maximum number of vehicles to even try to draw on map
 "maxVehicles": 200,
 #! Minimum map zoom state to show stations
 "minZoomForStations": 12,
 #! Maximum number of vehicles to even try to draw on map
 "maxStations": 150
}
